<h1>Add a Bookmark to <%= @list.name %></h1>

<%= simple_form_for [@list, @bookmark] do |f| %>
  <div>
    <%= f.input :movie_id, collection: @movies, label_method: :title, value_method: :id, prompt: "Select a movie" %>
  </div>

  <div>
    <%= f.input :comment, label: "Comment" %>
  </div>

  <div>
    <%= f.submit "Add Bookmark" %>
  </div>
<% end %>

<%= link_to 'Back to list', list_path(@list) %>
